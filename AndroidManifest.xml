<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ub.pis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="true" />
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logotipo"
        android:background="@drawable/castillo"
        android:label="@string/nombre_app"
        android:largeHeap="false"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name="com.ub.pis.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ub.pis.activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.MenuPrincipalActivity"
            android:label="@string/title_activity_menu_principal"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.SettingsActivity"
            android:configChanges="locale"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.ChooseStageActivity"
            android:label="@string/title_activity_choose_stage"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.LoadingGameActivity"
            android:label="@string/title_activity_loading"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.CharactersActivity"
            android:label="@string/title_activity_characters"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.GameOverActivity"
            android:label="@string/title_activity_stats"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.ShopActivity"
            android:label="@string/title_activity_shop"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.GameActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.ForgotPasswordActivity"
            android:screenOrientation="landscape" >
        </activity>

        <service
            android:name="com.ub.pis.music.services.MusicService"
            android:enabled="true" >
        </service>

        <activity
            android:name="com.ub.pis.activities.HighScoreActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.ub.pis.activities.DevelopersActivity"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>